{
  "compilerOptions": {
    "checkJs": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true, // workaround for noEmit not allowed in referenced tsconfig

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./**/.eslintrc.cjs",
    ".prettierrc.cjs",
    "postcss.config.js",
    "tailwind.config.js",
    "cypress.config.ts",
    "lint-staged.config.js"
  ]
}
