{
  "compilerOptions": {
    "checkJs": true,
    "composite": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "outDir": "ts-out"
  },
  "include": [
    "./**/.eslintrc.cjs",
    ".prettierrc.cjs",
    "postcss.config.js",
    "tailwind.config.js",
    "cypress.config.ts",
    "lint-staged.config.js",
    "./tsconfig.json"
  ]
}
